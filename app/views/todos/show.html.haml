%p= image_tag @todo.image.url(:medium)

- if not @todo.parent
  =link_to new_list_todo_path(@list, @parentID), class: 'btn btn-success' do
    %span.glyphicon.glyphicon-plus


- if not @todo.parent
  %h4 #{@todo.title}, Subtasks:
  %table.table.table-striped
    = render @todo.child_todos